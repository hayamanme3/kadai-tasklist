<ul class="media-list">
  <% tasks.each do |task| %>
    <% user = task.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(task.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= user.name %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <p><%= task.content %></p>
        </div>
        
        <div>
          <% if current_user == task.user %>
           <%= link_to "削除", task, method: :delete, data: { confirm: "本当に消してもいいですか?" }, class: 'btn btn-danger btn-xs' %>
           <% @tasks.each do |task| %>
             <tr>
              <td><%= link_to "編集", task, class: 'btn btn-danger btn-xs' %></td>
             </tr>
           <% end %>
      
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>